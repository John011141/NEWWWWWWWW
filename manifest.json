{
  "name": "TikTok Auto Gen",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Cyberpunk themed auto-generator extension with Flow integration",
  "permissions": ["sidePanel", "storage", "scripting", "activeTab"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://labs.google/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}